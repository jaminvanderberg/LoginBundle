html, body {
  height: 100%;
  overflow: hidden; 
}
  
body {
    background: url({{ asset(image_bkg|escape) }} ) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

.full-height {
    height: 100%;
}

.login-area {
    background-color: rgba( 0, 0, 0, 0.5 );
    height: 100%;
}

.logo-area {
    padding-top: 30px;
    padding-bottom: 20px;
}

.nav-pills > li > a {
    color: white;
}
.nav-pills > li > a:hover {
    background-color: black;
}

.list-social {
    padding-top: 10px;
}

.list-social li {
    padding-bottom: 5px;
}  

.login-full-height {
  position: relative;
  height: 100%;
}