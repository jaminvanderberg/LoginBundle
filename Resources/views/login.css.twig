html, body {
  height: 100%;
  overflow: hidden; 
}
  
body {
    background: url({{ asset(image_bkg)|raw }} ) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

.full-height {
    height: 100%;
}

.login-area,
.welcome-block {
    background-color: rgba( 0, 0, 0, 0.5 );
}

.welcome-block {
    margin: 10% 10% 10% 10%;
    padding: 5%;
    color: white;
    border-radius: 15px;
}

.logo-area {
    padding-top: 30px;
    padding-bottom: 20px;
}

.logo-image {
    min-height: {{ logo_height }};
    min-width: {{ logo_width }};
}

.nav-pills > li > a {
    color: white;
}
.nav-pills > li > a:hover {
    background-color: black;
}

.list-social {
    padding-top: 10px;
}

.list-social li {
    padding-bottom: 5px;
}  

.login-full-height {
  position: relative;
  height: 100%;
}