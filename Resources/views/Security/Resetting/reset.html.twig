{% extends "jaminvLoginBundle:Layout:security.html.twig" %}
{% set header = 'resetting.reset.submit'|trans({}, 'FOSUserBundle') %}

{% form_theme form with [ 'jaminvLoginBundle:form:bootstrap_4_layout.html.twig', 'jaminvLoginBundle:form:bootstrap.html.twig', _self ] %}
    
{% block security_form %}
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}

        <div>
            <input class="btn btn-success btn-block" type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    {{ form_end(form) }}
{% endblock security_form %}
